<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView

        android:layout_width="409dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="142dp"
                android:layout_height="31dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/white_garo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="144dp"
                android:layout_height="30dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="20dp"
                android:text="근처 병원 찾기"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="192dp"
                android:layout_height="43dp"
                android:layout_marginLeft="60dp"
                android:text="우리동네 근처 탈모관련 병원들을 한번 찾아보러 가자!" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#7ED957"
                android:text="우리동네..."
                android:textAlignment="viewStart"
                app:icon="@drawable/arrowup"
                app:iconGravity="end" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#7ED957"
                android:contextClickable="false"
                android:text="두피검사 바로가기"
                android:textAlignment="viewStart"
                android:textSize="25dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/iconsai"
                app:iconGravity="end"
                app:iconSize="50dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="#00BF63"
                android:contextClickable="false"
                android:text="헤어스타일 검사하러 가기"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/fileiconstwig"
                app:iconGravity="end"
                app:iconSize="50dp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:text="꼭 알아야 할 탈모 소식"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="본인 기록"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="최근 작섣한 게시글"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textIsSelectable="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>