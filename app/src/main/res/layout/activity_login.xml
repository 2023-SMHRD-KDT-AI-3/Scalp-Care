<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btn_loginGuest"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/grayIcon"
        android:text="비회원 계속하기"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginGoogle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_loginGoogle"
        app:layout_constraintTop_toBottomOf="@+id/btn_loginGoogle" />

    <Button
        android:id="@+id/btn_loginGoogle"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="구글"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@drawable/google"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginNaver"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_loginNaver"
        app:layout_constraintTop_toBottomOf="@+id/btn_loginNaver"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btn_loginNaver"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#24FF00"
        android:text="네이버"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:icon="@drawable/naver"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_loginkakao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_loginkakao"
        app:layout_constraintTop_toBottomOf="@+id/btn_loginkakao" />

    <Button
        android:id="@+id/btn_loginkakao"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FAFF00"
        android:text="카카오톡"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:icon="@drawable/kakaotalk"
        app:iconGravity="end"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/Login_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Login_img"
        app:layout_constraintTop_toBottomOf="@+id/Login_img" />

    <ImageView
        android:id="@+id/Login_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_sero" />

</androidx.constraintlayout.widget.ConstraintLayout>