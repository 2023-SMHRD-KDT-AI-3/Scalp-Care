<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".information.InfoInsideActivity">

    <ScrollView
        android:id="@+id/scrollView13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="330dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/grayText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infoInsideTitle" />

                <TextView
                    android:id="@+id/tvBack4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="288dp"
                    android:text="@string/tvBack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/imgBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imgBack"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.805" />

                <ImageView
                    android:id="@+id/imgBack4"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/arrow_left" />

                <TextView
                    android:id="@+id/infoInsideTitle"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="제목"
                    android:textColor="@color/green"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tvBack4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/imgBack4"
                    app:layout_constraintTop_toBottomOf="@+id/tvBack4" />

                <ImageView
                    android:id="@+id/infoInsideImg"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="@+id/textView38"
                    app:layout_constraintStart_toStartOf="@+id/textView38"
                    app:layout_constraintTop_toBottomOf="@+id/textView38"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/infoInsideContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="content text"
                    app:layout_constraintEnd_toEndOf="@+id/textView38"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView38"
                    app:layout_constraintTop_toBottomOf="@+id/infoInsideImg" />

                <TextView
                    android:id="@+id/infoInsideTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2023.00.00"
                    android:textColor="@color/grayText"
                    app:layout_constraintEnd_toEndOf="@+id/textView38"
                    app:layout_constraintHorizontal_bias="0.786"
                    app:layout_constraintStart_toStartOf="@+id/textView38"
                    app:layout_constraintTop_toBottomOf="@+id/textView38" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/infoInsideTime"
                    app:layout_constraintStart_toEndOf="@+id/infoInsideTime"
                    app:layout_constraintTop_toTopOf="@+id/infoInsideTime"
                    app:layout_constraintVertical_bias="0.4"
                    app:srcCompat="@drawable/info_view_icon" />

                <TextView
                    android:id="@+id/infoInsideViews"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/lightgreen"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                    app:layout_constraintEnd_toEndOf="@+id/textView38"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="@+id/imageView10"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/btnlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/infoInsideContent"
                    app:layout_constraintHorizontal_bias="0.781"
                    app:layout_constraintStart_toStartOf="@+id/infoInsideContent"
                    app:layout_constraintTop_toBottomOf="@+id/infoInsideContent"
                    app:srcCompat="@drawable/thumbs_up_off" />

                <ImageView
                    android:id="@+id/btnhate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/likeCount"
                    app:layout_constraintStart_toEndOf="@+id/likeCount"
                    app:layout_constraintTop_toTopOf="@+id/likeCount"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/thumbs_down_off" />

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/lightgreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnlike"
                    app:layout_constraintStart_toEndOf="@+id/btnlike"
                    app:layout_constraintTop_toTopOf="@+id/btnlike" />

                <TextView
                    android:id="@+id/hateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/lightgreen"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnhate"
                    app:layout_constraintStart_toEndOf="@+id/btnhate"
                    app:layout_constraintTop_toTopOf="@+id/btnhate"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/edtReviewContent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_corner_round_white"
                    android:ems="10"
                    android:hint="@string/edtHintDetgul"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/infoInsideContent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/infoInsideContent"
                    app:layout_constraintTop_toBottomOf="@+id/btnlike" />

                <Button
                    android:id="@+id/btnReviewSave"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:backgroundTint="@color/green"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/btndetgul"
                    android:textSize="12sp"
                    app:cornerRadius="10dp"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/edtReviewContent"
                    app:layout_constraintEnd_toEndOf="@+id/infoChatList"
                    app:layout_constraintStart_toStartOf="@+id/btnlike"
                    app:layout_constraintTop_toTopOf="@+id/edtReviewContent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/infoChatList"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="@+id/edtReviewContent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/edtReviewContent"
                    app:layout_constraintTop_toBottomOf="@+id/edtReviewContent" />

                <ImageView
                    android:id="@+id/thumbsUpMove"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/avd_scalpcarelike" />

                <ImageView
                    android:id="@+id/thumbsDownMove"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/avd_scalpcarehate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>